<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href="/static/style/global.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" >

    <link rel="stylesheet" href="/static/style/hljs.min.css" >
    <script src="/static/js/highlight.min.js"></script>

    <meta property="og:title" content="{{author.name}}">
    <meta property="og:description" content="Liste des texto de {{author.name}}

    ðŸ“„ {{ author.textos }} textos - ðŸ‘€ {{ author.views }} vues">
    <meta property="og:site_name" content="Texto">
    <meta property="og:image" content="{{author.avatar}}">

    <title>Texto</title>
</head>
<body>



<div class="h-screen">
    <div class="flex h-full flex-col">
        <div class="flex h-auto justify-between bg-gray-800 py-2 text-2xl text-white">
            <div class="flex-1 italic">
                <span class="ml-4">TEXTO</span>
            </div>
            <div class="flex flex-1 items-center justify-center space-x-2">
                <button id="menu-new" class="h-6 w-6 tooltip"><i class="fa-solid fa-plus"></i>
                    <div class="bottom">
                        <p>Nouveau</p>
                    </div>
                </button>
                <button id="menu-git" class="h-6 w-6 tooltip"><i class="fa-brands fa-github"></i>
                    <div class="bottom">
                        <p>Github</p>
                    </div>
                </button>
            </div>
            <div class="flex flex-1 justify-end">
                {{#connected.connected}}
                    <img class="h-full w-8  mr-1 rounded-full" src="{{ connected.avatar }}" alt="avatar">
                {{/connected.connected}}
                {{^connected.connected}}
                    <a href="/login"><div class="px-2 mr-1 bg-gray-700 rounded-lg">Login</div></a>
                {{/connected.connected}}
            </div>
        </div>
        <div class="flex flex-col-reverse lg:flex-row  overflow-y-auto bg-gray-700 p-4 text-white h-full">
            <div class="flex-1 px-2">


                <div class="w-full h-10 px-2 mb-1 mt-2 lg:mt-0">
                    <input type="text" name="search" placeholder="Rechercher :" id="search" class="w-full h-full bg-gray-800 rounded-full px-4">
                </div>
                <div class="flex flex-row flex-wrap" id="textos-list" data-textos="{{ textos }}"></div>
            </div>

            <div class="lg:relative w-full lg:w-96">
                <div class="lg:fixed lg:right-18 flex h-auto w-full lg:w-96 flex-col items-center space-y-5 rounded-xl bg-gray-800 p-6">
                    <a href="/author/{{ author.cleanName }}" class="flex flex-col items-center w-full rounded-xl hover:bg-gray-700 hover:transition-colors">
                        <img class="h-40 w-40 rounded-full" src="{{ author.avatar }}" alt="avatar">
                        <div class="text-3xl pt-1">{{ author.name }}</div>
                    </a>
                    <div class="flex w-full justify-around rounded-lg bg-gray-700 p-3">
                        <span>{{ author.textos }} textos</span>
                        <span>{{ author.views }} vues</span>
                    </div>
                    <div
                            id="socialMedia"
                            class="flex w-full justify-around px-8"
                            data-social="{{ author.social }}"
                    ></div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="/static/js/code.js"></script>
</body>
</html>